{
    "manifest_version": 3,
    "name": "Cityu quick add drop",
    "version": "1.0",
    "description": "simple extension to allow quick add drop for cityu students",
    "permissions": [
        "activeTab", 
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://banweb.cityu.edu.hk/*"
            ],
            "js": [
                "jquery-3.7.1.min.js",
                "injectCrs.js"
            ],
            "run_at": "document_end"
        }
    ]
}
